<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_income_type_name_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingStart="8dp"
        android:text="Text example"
        android:textSize="12pt" />

    <ImageButton
        android:id="@+id/imagebtn_edit_income_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imagebtn_delete_income_type"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_baseline_edit_24" />

    <ImageButton
        android:id="@+id/imagebtn_delete_income_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_baseline_delete_24" />
</RelativeLayout>