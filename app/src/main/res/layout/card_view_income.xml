<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="3dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textview_cardview_income_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="8dp"
                android:text="money example"
                android:textColor="@color/light_green"
                android:textSize="10pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_cardview_income_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="date example"
                android:textStyle="italic" />

            <View
                android:id="@+id/hr"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textview_cardview_income_date"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/textview_cardview_income_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hr"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="income example"
                android:textSize="8pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_cardview_income_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_cardview_income_name"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="text example" />

            <TextView
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/textview_cardview_income_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_cardview_income_type_name"
                android:text="note example"
                android:textStyle="italic"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>