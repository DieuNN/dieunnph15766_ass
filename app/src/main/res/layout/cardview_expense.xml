<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"
        app:cardElevation="0dp"
        android:layout_marginTop="16dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textview_cardview_expense_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="month example"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textview_cardview_expense_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="8dp"
                android:text="money example"
                android:textColor="@color/light_green"
                android:textSize="10pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_cardview_expense_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_cardview_expense_month"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="date example"
                android:textStyle="italic" />

            <View
                android:id="@+id/hr"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textview_cardview_expense_date"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/textview_cardview_expense_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hr"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="expense name example"
                android:textSize="8pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_cardview_expense_type_name"
                android:layout_below="@+id/textview_cardview_expense_name"
                android:text="text example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                />
        </RelativeLayout>





    </com.google.android.material.card.MaterialCardView>

</LinearLayout>